}

function thsc_team_list_teams() {
  // use datatables module if enabled
  $use_datatables = module_exists('datatables');
  $teams = thsc_team_load_multiple();
  if (!empty($teams)) {
    foreach ($teams as $team) {
      $group = thsc_group_load($team->group_id);
      $row_data = array(
    	  'team_name' => l($team->team_name, 'thsc_team/' . $team->team_id),
        'group_name' => l($group->group_name, 'thsc_group/' . $group->group_id),
      );
      if ($use_datatables) {
        $rows[] = $row_data;
      }
      else {
        $rows[] = array(
          'data' => $row_data,
        );
      }
    }

    if ($use_datatables) {
      $header = array(
        array(
          'data' => 'Team Name',
          'datatable_options' => array(
            'bSortable' => TRUE,
            'bSearchable' => TRUE
          )
        ),
        array(
          'data' => 'Group',
          'datatable_options' => array(
          	'bSortable' => TRUE,
            'bSearchable' => TRUE,
          ),
        ),
      );

      $attributes['datatable_options'] = array(
        'bFilter' => TRUE,
        // 'bInfo' => TRUE,
        'bSort' => TRUE
      );

      $content['entity_datatable'] = array(
        '#theme' => 'datatable',
        '#header' => $header,
        '#rows' => $rows,
        '#attributes' => $attributes
      );
    }
    else {
      $content['entity_table'] = array(
        '#theme' => 'table',
        '#rows' => $rows,
        '#header' => array(
          'Team Name',
          'Group',
        )
      );
    }
  }
  else {
    $content[] = array(
      '#type' => 'item',
      '#markup' => t('No THSC Team currently exist!')
    );
  }

  return $content;
}

function thsc_team_view($team, $view_mode = 'full') {
  $entity_type = 'thsc_team';
  $team->content = array();

  field_attach_prepare_view($entity_type, array(
    $team->team_id => $team
  ), $view_mode);
  entity_prepare_view($entity_type, array(
    $team->team_id => $team
  ));
  $team->content += field_attach_view($entity_type, $team, $view_mode);

  $team->content['team_name'] = array(
    '#type' => 'item',
    '#title' => t('Team Name'),
    '#markup' => $team->team_name,
    '#weight' => -10
  );
  if ($team->group_id) {
    $group = thsc_group_load($team->group_id);
    $team->content['group_name'] = array(
    	'#type' => 'item',
      '#title'=> 'Group',
      '#markup' => $group->group_name,
      '#weight' => -8,
    );
  }

  $team->content['manage_players'] = array(
    '#type' => 'item',
    '#title' => '',
    '#markup' => l('Manage Players', 'thsc_team/' . $team->team_id . '/manage/players')
  );
  global $language;
  $langcode = $language->language;
  module_invoke_all('entity_view', $team, $entity_type, $view_mode, $langcode);
  drupal_alter(array(
    'thsc_team_view',
    'entity_view'
  ), $team->content, $entity_type);

  return $team->content;
}

