/**
 * Returns a single form element that is used in thsc_game_team_schedule form and presents the team schedule
 * $type can be 'live' for future events, or 'full' for all the schedule including passed ones.
 *
 * @param int $team_id
 * @param string $type
 */
function thsc_game_team_schedule_table($team_id, $type = 'live') {
  $games = _thsc_game_team_schedule_array($team_id, $type);
  $use_datatables = module_exists('datatables');
  $rows = array();
  $nexttime_set = FALSE;
  foreach ($games as $time => $game) {
    $game_time = format_date($time, 'custom', 'D, j M Y H:i');
    $row_data = array(
      'time' => $game_time,
      'type' => $game['type'],
      'team_a' => $game['team_a'] . ((!empty($game['goal_forward'])) ? ' (' . $game['goal_forward'] . ')' : ''),
      'team_b' => $game['team_b'] . ((!empty($game['goal_accept'])) ? ' (' . $game['goal_accept'] . ')' : ''),
      'location' => $game['location']
    );
    $classes = array(
      'time' => array(),
      'type' => array(),
      'team_a' => array(),
      'team_b' => array(),
      'location' => array()
    );
    // For the first event after current time, we need to set special css class
    if (!$nexttime_set && ($time > time())) {
      $nexttime_set = TRUE;
      $classes['time'][] = 'schedule-nexttime-cell';
      $classes['type'][] = 'schedule-nexttime-cell';
      $classes['team_a'][] = 'schedule-nexttime-cell';
      $classes['team_b'][] = 'schedule-nexttime-cell';
      $classes['location'][] = 'schedule-nexttime-cell';
    }
    if ($game['type'] == 'Practice') {
      foreach ($row_data as $key => $data) {
        if ($key == 'type') {
          $classes[$key][] = 'schedule-type-cell';
        }
        $classes[$key][] = 'schedule-practice-row';
      }
    }
    else {
      $classes['type'][] = 'schedule-type-cell';
    }
    // Now we need to apply classes to each row cell
    foreach ($row_data as $key => $data) {
      if (!empty($classes[$key])) {
        $class_list = implode(' ', $classes[$key]);
        if ($class_list != '') {
          $row_data[$key] = '<span class="' . $class_list . '">' . $row_data[$key] . '</span>';
        }
      }
    }
    if ($use_datatables) {
      $rows[] = $row_data;
    }
    else {
      $rows[] = array(
        'data' => $row_data
      );
    }
  }

  if ($use_datatables) {
    $header = array(
      array(
        'data' => 'Time',
        'datatable_options' => array(
          'bSortable' => FALSE,
          'sWidth' => '30%'
        )
      ),
      array(
        'data' => 'Type',
        'datatable_options' => array(
          'bSortable' => FALSE,
          'sWidth' => '10%'
        )
      ),
      array(
        'data' => 'Team A',
        'datatable_options' => array(
          'bSortable' => FALSE,
          'sWidth' => '20%'
        )
      ),
      array(
        'data' => 'Team B',
        'datatable_options' => array(
          'bSortable' => FALSE,
          'sWidth' => '20%'
        )
      ),
      array(
        'data' => 'Location',
        'datatable_options' => array(
          'bSortable' => FALSE
        )
      )
    );
    $attributes['datatable_options'] = array(
      'bFilter' => FALSE,
      'bInfo' => FALSE,
      'bSort' => FALSE,
      'bPaginate' => FALSE,
      'bJQueryUI' => TRUE
    // 'oTableTools' => array(
    // 'sSwfPath' => base_path() . _datatables_get_path() . '/extras/TableTools/media/swf/copy_csv_xls_pdf.swf',
    // ),
    // 'sDom' => 'T<"clear">lfrtip',
        );
    $attributes['id'] = 'schedule-table';
    // drupal_add_library('datatables', 'datatables-tabletools');
    $form_element = array(
      '#theme' => 'datatable',
      '#header' => $header,
      '#rows' => $rows,
      '#attributes' => $attributes
    );
  }
  else {
    $form_element = array(
      '#theme' => 'table',
      '#rows' => $rows,
      '#header' => array(
        'Time',
        'Type',
        'Team A',
        'Team B',
        'Location'
      )
    );
  }
  return $form_element;
}

