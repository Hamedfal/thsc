/**
 * Returns an associative array of all schedules items (keys are time) that are sorted by time.
 * This array could be used in different places to show the schedule in UI or Print or Blocks, etc.
 *
 * @param int $team_id
 * @param string $type
 */
function _thsc_game_team_schedule_array($team_id, $type = 'live') {
  $current_seasonid = variable_get('thsc_active_season', 0);
  $query = db_select('thsc_game', 'g');
  $query->condition('g.season_id', $current_seasonid, '=');
  $query->condition('g.team_id', $team_id, '=');
  $query->join('thsc_game', 'g2', 'g.nid = g2.nid AND g.row_id <> g2.row_id');
  $query->join('thsc_team', 't', 'g.team_id = t.team_id');
  $query->join('thsc_team', 't2', 'g2.team_id = t2.team_id');
  $query->fields('g', array(
    'nid',
    'row_id'
  ));
  $query->addField('g', 'score', 'GF');
  $query->addField('g2', 'score', 'GA');
  $query->addField('t', 'team_name');
  $query->addField('t2', 'team_name', 'other_team_name');
  if ($type == 'live') {
    $base_time = time();
  }
  else {
    $base_time = 0;
  }
  // we create an array to hold all the games. Array keys would be timestamp of the game_time field.
  // then we sort the array before creating the output.
  // for $type=live, we only add future games.
  $games = array();
  $result = $query->execute();
  foreach ($result as $rec) {
    if ($game = node_load($rec->nid)) {
      $wrapper = entity_metadata_wrapper('node', $game);
      $game_time = $wrapper->game_time->value();
      if ($game_time > $base_time) {
        $games[$game_time] = array(
          'type' => ($rec->row_id == 1) ? 'Home' : 'Away',
          'team_a' => $rec->team_name,
          'team_b' => $rec->other_team_name,
          'goal_forward' => $rec->GF,
          'goal_accept' => $rec->GA,
          'location' => ''
        );
        $game_location = $wrapper->field_game_location->value();
        if ($game_location) {
          $games[$game_time]['location'] = l($game_location->title, 'node/' . $game_location->nid);
        }
      }
    }
  }

  $query = db_select('thsc_practice', 'p');
  $query->condition('p.season_id', $current_seasonid, '=');
  $query->condition('p.team_id', $team_id, '=');
  $query->join('thsc_team', 't', 'p.team_id = t.team_id');
  $query->addField('p', 'nid');
  $query->addField('t', 'team_name');
  $result = $query->execute();
  foreach ($result as $rec) {
    if ($practice = node_load($rec->nid)) {
      $wrapper = entity_metadata_wrapper('node', $practice);
      $practice_time = $wrapper->practice_time->value();
      if ($practice_time > $base_time) {
        $games[$practice_time] = array(
          'type' => 'Practice',
          'team_a' => $rec->team_name,
          'team_b' => '-----',
          'goal_forward' => '',
          'goal_accept' => '',
          'location' => ''
        );
        $practice_location = $wrapper->field_practice_location->value();
        if ($practice_location) {
          $games[$practice_time]['location'] = l($practice_location->title, 'node/' . $practice_location->nid);
        }
      }
    }
  }

  ksort($games);
  return $games;
}