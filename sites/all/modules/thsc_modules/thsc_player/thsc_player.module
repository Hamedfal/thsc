/**
 * Deletes users that hasn't validated their account or have no children more than 24 hours ago.
 * Users that have roles other than "authenticated user" will not be included in this process.
 */
function thsc_player_cron() {
  $childless_users = _thsc_player_get_childless_users(TRUE);
  if (count($childless_users) > 0) {
    watchdog('cron', 'Number of ' . count($childless_users) . ' childless users are being deleted from the system.', NULL, WATCHDOG_NOTICE);
    foreach ( $childless_users as $rec ) {
      user_delete($rec['uid']);
    }
  } else {
    watchdog('cron', 'THSC Player cron ran with no spam data to delete!', NULL, WATCHDOG_NOTICE);
  }
}
