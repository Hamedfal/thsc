/**
 * Returns an array of users with that have no child, and are only member of "authenticated users"
 * The return array is array of
 * 'uid' =>
 * 'name' =>
 * 'mail' =>
 */
function _thsc_player_get_childless_users($older_than_24hrs = FALSE, $seconds_after_created = 500) {
  $query = db_select('users', 'u');
  $query->where('(u.uid > 0)');
  $query->leftJoin('field_data_field_parent', 'p', 'u.uid = p.field_parent_target_id');
  $query->fields('u', array(
    'uid',
    'name',
    'mail'
  ));
  $query->fields('p', array(
    'field_parent_target_id'
  ));
  $query->where('p.field_parent_target_id IS NULL');
  if ($older_than_24hrs) {
    $query->condition('u.created', time() - (24 * 60 * 60), '<');
  }
  else {
    $query->condition('u.created', time() - $seconds_after_created, '<');
  }
  $result = $query->execute();
  $rec = $result->fetchAssoc();
  $rows = array();
  while ( $rec ) {
    $account = user_load($rec['uid']);
    // make sure user only has "authenticated user" role and nothing else.
    if (count($account->roles) == 1) {
      $rows[] = array(
        'uid' => $account->uid,
        'mail' => $account->mail,
        'name' => $account->name
      );
    }
    $rec = $result->fetchAssoc();
  }
  return $rows;
}
function thsc_player_delete_nochild($seconds_after_created, $how_many) {
  $childless_users = _thsc_player_get_childless_users(FALSE, $seconds_after_created);
  if (count($childless_users) > 0) {
    $x = 'Deleting these accounts: <br />';
    foreach ( $childless_users as $rec ) {
      $x .= $rec['uid'] . ' ' . $rec['mail'] . ' ' . $rec['name'];
      user_delete($rec['uid']);
    }
  }
  else {
    $x = 'No user to delete!';
  }

  return array(
    '#type' => 'markup',
    '#markup' => $x
  );
}

