  ));
  $nids = $query->execute()
    ->fetchCol();

  $content['report_help'] = array(
    '#type' => 'markup',
    '#markup' => '<strong>Please Note: When downloading your report, please make sure you enter a filename with "XLS" extension.</strong>'
  );

  $rows = array();
  $rows[] = array(
    'data' => array(
      l('Full Members Report', '/seasonaldata-xls/all')
    )
  );

  foreach ( $nids as $nid ) {
    $node = node_load($nid);
    $rows[] = array(
      'data' => array(
        l($node->title, '/seasonaldata-xls/' . $nid)
      )
    );
  }

  $content['allmembers'] = array(
    '#type' => 'markup',
    '#markup' => theme('table', array(
      'header' => array(
        'Available Reports'
      ),
      'rows' => $rows
    ))
  );

  return $content;
}

